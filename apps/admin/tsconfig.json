{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@angular/*": ["node_modules/@angular/*"],
      "@colmena/*": ["node_modules/@colmena/*"],
      "@ngrx/*": ["node_modules/@ngrx/*"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
