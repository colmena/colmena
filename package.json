{
  "name": "@colmena/colmena",
  "version": "0.0.0",
  "description": "Colmena",
  "private": false,
  "license": "MIT",
  "author": "Bram Borggreve <bram@colmena.io>",
  "url": "https://github.com/colmena/colmena",
  "homepage": "https://github.com/colmena/colmena",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmena/colmena"
  },
  "bugs": {
    "url": "https://github.com/colmena/colmena/issues"
  },
  "keywords": [
    "colmena",
    "cms",
    "mobile",
    "backend",
    "loopback",
    "angular",
    "admin"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:admin": "lerna run build --stream --scope @colmena/admin",
    "build:api": "lerna run build --stream --scope @colmena/api",
    "clean": "concurrently -s \"last\" -p \"|{name}|\" -n \"root,colmena\" -c \"white.bgRed,white.bgBlue,\" \"rimraf node_modules\" \"lerna clean --yes\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "dev": "lerna run dev --stream",
    "dev:admin": "lerna run dev --stream --scope @colmena/admin",
    "dev:api": "lerna run dev --stream --scope @colmena/api",
    "preinstall": "npm install -g lerna concurrently rimraf && npm run clean",
    "postinstall": "lerna bootstrap && npm run build",
    "lint": "eslint . --fix",
    "sdk": "run-p -l sdk:api",
    "sdk:api": "cross-env NODE_ENV=codegen lb-sdk --wipe enabled apps/api/server/server.js packages/admin-lb-sdk/src",
    "start": "cd apps/api && npm start"
  },
  "dependencies": {
    "cross-env": "^5.0.1"
  },
  "devDependencies": {
    "@angular/animations": "4.1.3",
    "@angular/cli": "1.1.1",
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/compiler-cli": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@angular/router": "4.1.3",
    "@ngrx/core": "1.2.0",
    "@ngrx/effects": "2.0.3",
    "@ngrx/router-store": "1.2.6",
    "@ngrx/store": "2.2.2",
    "@ngrx/store-devtools": "3.2.4",
    "all-contributors-cli": "^4.3.0",
    "codelyzer": "^3.0.1",
    "core-js": "2.4.1",
    "eslint": "^3.19.0",
    "eslint-plugin-prettier": "^2.1.1",
    "nodemon": "1.11.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.4.4",
    "rxjs": "5.4.0",
    "tslint": "5.4.3",
    "typescript": "2.3.4",
    "zone.js": "0.8.12"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  }
}
