{
  "name": "@colmena/colmena",
  "version": "0.0.0",
  "description": "Colmena",
  "private": false,
  "license": "MIT",
  "author": "Bram Borggreve <bram@colmena.io>",
  "url": "https://github.com/colmena/colmena-cms",
  "homepage": "https://github.com/colmena/colmena-cms",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmena/colmena-cms"
  },
  "bugs": {
    "url": "https://github.com/colmena/colmena-cms/issues"
  },
  "keywords": [
    "colmena",
    "cms",
    "colmena-cms",
    "loopback",
    "angular",
    "admin"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf ./node_modules",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "run-p -l build:admin build:api",
    "build:admin": "lerna run build --stream --scope @colmena/admin",
    "build:api": "lerna run build --stream --scope @colmena/api",
    "dev": "run-p -l dev:admin dev:api",
    "dev:admin": "lerna run dev --stream --scope @colmena/admin",
    "dev:api": "lerna run dev --stream --scope @colmena/api",
    "lint": "eslint . --fix",
    "postinstall": "lerna bootstrap",
    "sdk": "run-p -l sdk:api",
    "sdk:api": "cross-env NODE_ENV=codegen lb-sdk --wipe enabled apps/api/server/server.js packages/api-lb-sdk/src",
    "start": "nps"
  },
  "devDependencies": {
    "@angular/animations": "4.0.1",
    "@angular/common": "4.0.1",
    "@angular/compiler": "4.0.1",
    "@angular/core": "4.0.1",
    "@angular/forms": "4.0.1",
    "@angular/http": "4.0.1",
    "@angular/platform-browser": "4.0.1",
    "@angular/platform-browser-dynamic": "4.0.1",
    "@angular/router": "4.0.1",
    "@mean-expert/loopback-sdk-builder": "2.1.0-rc.9",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^2.0.3",
    "@ngrx/router-store": "^1.2.6",
    "@ngrx/store": "^2.2.2",
    "@ngrx/store-devtools": "^3.2.4",
    "all-contributors-cli": "^3.1.1",
    "codelyzer": "2.1.1",
    "core-js": "2.4.1",
    "eslint": "^3.19.0",
    "eslint-plugin-prettier": "^2.0.1",
    "lerna": "^2.0.0-rc.4",
    "nodemon": "1.11.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.3.1",
    "rimraf": "^2.6.1",
    "rxjs": "5.3.0",
    "tslint": "4.5.1",
    "typescript": "2.2.2",
    "zone.js": "0.8.5"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "dependencies": {
    "cross-env": "^5.0.0"
  }
}
