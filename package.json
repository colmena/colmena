{
  "name": "@colmena/colmena",
  "version": "0.0.0",
  "description": "Colmena",
  "private": false,
  "license": "MIT",
  "author": "Bram Borggreve <bram@colmena.io>",
  "url": "https://github.com/colmena/colmena-cms",
  "homepage": "https://github.com/colmena/colmena-cms",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmena/colmena-cms"
  },
  "bugs": {
    "url": "https://github.com/colmena/colmena-cms/issues"
  },
  "keywords": [
    "colmena",
    "cms",
    "colmena-cms",
    "loopback",
    "angular",
    "admin"
  ],
  "scripts": {
    "clean": "lerna clean --yes",
    "clean:api": "cd apps/api && npm run clean",
    "clean:admin": "cd apps/admin && npm run clean",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "run-s -l build:admin build:api",
    "build:admin": "lerna run build --stream --scope @colmena/admin",
    "build:api": "lerna run build --stream --scope @colmena/api",
    "dev": "run-p -l dev:admin dev:api",
    "dev:admin": "lerna run dev --stream --scope @colmena/admin",
    "dev:api": "lerna run dev --stream --scope @colmena/api",
    "lint": "eslint . --fix",
    "postinstall": "lerna bootstrap",
    "sdk": "run-p -l sdk:api",
    "sdk:api": "cross-env NODE_ENV=codegen lb-sdk --wipe enabled apps/api/server/server.js packages/admin-lb-sdk/src",
    "start": "cd apps/api && npm start"
  },
  "dependencies": {
    "cross-env": "^5.0.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "codelyzer": "2.1.1",
    "core-js": "2.4.1",
    "eslint": "^3.19.0",
    "eslint-plugin-prettier": "^2.1.1",
    "lerna": "2.0.0-rc.5",
    "nodemon": "1.11.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.3.1",
    "rimraf": "^2.6.1",
    "tslint": "4.5.1",
    "typescript": "2.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  }
}
